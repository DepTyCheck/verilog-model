{
	"name": "verilog-model-site",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"generate": "node scripts/gen_errors_data.js ./found_errors src/lib/generated/errors_data.ts",
		"check:unique_ids": "node scripts/check_unique_ids.js ./found_errors",
		"pre": "npm run check:unique_ids && npm run generate",
		"dev": "npm run pre && vite dev",
		"build": "npm run pre && vite build",
		"preview": "vite preview",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write ./src/",
		"lint": "prettier --check . && eslint ."
	},
	"devDependencies": {
		"@eslint/compat": "^1.2.5",
		"@eslint/js": "^9.18.0",
		"@sveltejs/adapter-auto": "^6.0.0",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@tailwindcss/vite": "^4.0.0",
		"eslint": "^9.18.0",
		"eslint-config-prettier": "^10.0.1",
		"eslint-plugin-svelte": "^3.0.0",
		"flowbite": "^3.1.2",
		"flowbite-svelte": "^1.8.4",
		"flowbite-svelte-icons": "^2.2.1",
		"globals": "^16.0.0",
		"js-yaml": "^4.1.0",
		"prettier": "^3.4.2",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"shiki": "^3.7.0",
		"svelte": "^5.0.0",
		"svelte-check": "^4.0.0",
		"tailwindcss": "^4.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.20.0",
		"vite": "^6.2.6"
	}
}
